<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="41dp"
    tools:context=".MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/token_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="0dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/consumos_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumos"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/productos_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:layout_marginTop="10dp"/>





        <Button
            android:id="@+id/egresos_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Egresos"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/envetos_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eventos"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/mesas_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesas"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/users_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuarios"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</ScrollView>